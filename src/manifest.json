{
  "name": "Productive Slack",
  "description": "An extension to make Slack more productivity-friendly",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "background.ts"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.slack.com/*"
      ],
      "js": [
        "content.ts"
      ]
    }
  ],
  "manifest_version": 2
}
